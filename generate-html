#! /bin/bash

SCRIPT_DIR=`dirname $0`
source ${SCRIPT_DIR}/common-functions
exit_if_no_arguments $#

FILE=${1}

if [ ! -f ${FILE} ]; then
	echo File ${FILE} does not exist!
	exit 1
fi

FILE_NO_EXT=${FILE%.*}
HTML_FILE=${FILE_NO_EXT}.html

xsltproc /usr/share/xml/docbook/stylesheet/docbook-xsl-ns/html/docbook.xsl ${FILE} > ${HTML_FILE}
